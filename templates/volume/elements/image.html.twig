{% block image %}

	{#    scale_small #}
	{#    thumb_url #}
	{#    original_url #}

	{% set src = volume.image %}
	{% set alt = volume.name %}

	{% if display|default('VOLUME') is same as 'VOLUME' or volume.getNextToreadissue() == null %}

	{% elseif display in ['NEXT_TO_READ', 'PROGRESS'] %}

		{% set src = volume.getNextToreadissue().image %}
		{% set alt = volume.getNextToreadissue().name %}

	{% endif %}

	{% if display not in ['PROGRESS'] %}
		{% set src = src|replace({'original':'scale_small'}) %}
	{% endif %}

	<img data-display="{{ display }}" src="{{ src }}" alt="{{ alt }}"
			loading="lazy"/>

{% endblock %}