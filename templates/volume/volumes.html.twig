<section id="{{ section.id }}" class="{{ section.display|default('grid') }} volumes" {{ stimulus_controller('volume') }}>
	<h2>{{ section.title }} ({{ volumes|length }})</h2>

	<div class="content volumes-list">
		{% for volume in volumes %}
			{% include 'volume/volume.html.twig' with {volume:volume, display: display} %}
		{% endfor %}
	</div>
</section>