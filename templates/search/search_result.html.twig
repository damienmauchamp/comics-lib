<li class="result"
		{{ stimulus_target('search', 'volume') }}
		{{ stimulus_action('click->search', data.type) }}
		data-added="{{ data.added ? '1' : '0' }}"
		data-type="{{ data.type }}"
		data-id="{{ data.id }}"
		data-idc="{{ data.idc }}">
	<img class="result-image"
			src="{{ data.image }}"
			alt="{{ data.full_name }}">

	<div class="result-info">
		<div class="result-name">{{ data.name }} <span class="result-year">({{ data.year }})</span></div>
		<div class="result-issues">{{ data.number_issues }} issue{{ data.number_issues > 1 ? 's' : '' }}</div>
		<div class="result-publisher">{{ data.publisher_name }}</div>
	</div>

	<div class="result-badges">
		<i class="fa fa-{{ data.added ? 'check-circle' : 'plus-circle' }}"
				data-type="{{ data.type }}"
				data-id="{{ data.id }}"
				data-idc="{{ data.idc }}"
				{{ stimulus_action('click->search', data.added ? 'see' : 'add') }}></i>
		{#        <div class="result-{{ data.added ? 'added' : 'add' }}"></div> #}
	</div>
</li>